{
  "name": "monorepo-boilerplate",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "bootstrap": "lerna bootstrap",
    "ls-packages": "lerna ls",
    "diff": "lerna diff",
    "changed": "lerna changed",
    "prepublish": "npm run build",
    "publish": "lerna publish && git push",
    "publish:initial": "git push -u origin master && lerna publish --from-git",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "lint": "eslint .",
    "postinstall": "npm run bootstrap",
    "prebuild": "lerna exec --parallel -- rimraf dist",
    "build": "lerna exec --parallel -- BABEL_ENV=production babel --copy-files --out-dir dist --config-file ../../babel.config.js src",
    "pre-commit:error": "echo-cli 'Could not commit. Fix the problem, then run: npm run commit:retry' && exit 1"
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test || npm run pre-commit:error",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "author": {
    "name": "Linq2Js",
    "email": "linqtojs@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linq2js/monorepo-boilerplate.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.0.6",
    "babel-preset-minify": "^0.5.1",
    "commitizen": "3.0.5",
    "cz-lerna-changelog": "2.0.0",
    "echo-cli": "1.0.8",
    "eslint": "^7.31.0",
    "eslint-config-react-app": "^6.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "nodemon": "^2.0.12"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended"
    ],
    "ignorePatterns": [
      "**/node_modules/**"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
